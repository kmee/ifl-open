<odoo>

     <record id="link_nfe_po_form" model="ir.ui.view">
        <field name="name">nfe_import.link_nfe_po.form</field>
        <field name="model">nfe_import.link_nfe_po</field>
        <field name="arch" type="xml">

            <form string="Conciliamento e Tipo de Recebimento">
                <field name="origin_model" invisible="1"/>
                <field name="linked" invisible="1"/>
                <field name="partner_id" invisible="1"/>

                <!-- Escolha de tipo de recebimento -->
                <div>
                    <group string="Método de Entrada">
                        <br/>
                        <field name="entry_type"/>
                    </group>
                </div>

                <!-- Conciliamento com PO através de documento -->
                <div attrs="{'invisible': ['|', ('origin_model', '!=', 'document'), ('linked', '=', True)]}">
                    <group string="Conciliar com Ordem de Compra">
                        <field name="link_or_create_po"/>
                        <field name="new_date_order" attrs="{'invisible': [('link_or_create_po', '!=', 'create')]}"/>
                        <field name="new_date_planned" attrs="{'invisible': [('link_or_create_po', '!=', 'create')]}"/>
                        <field name="purchase_id" attrs="{'invisible': [('link_or_create_po', '!=', 'link')]}" options="{'no_create': True}"/>
                    </group>
                    <separator
                        string="Ordem de Compra"
                        attrs="{'invisible': [('link_or_create_po', '!=', 'link')]}"
                    />
                    <group attrs="{'invisible': ['|', ('link_or_create_po', '!=', 'link'), ('purchase_id', '=', False)]}">
                        <group>
                            <field name="purchase_partner_id" readonly="True" />
                            <field name="purchase_partner_ref" readonly="True" />
                        </group>
                        <group>
                            <field name="purchase_date_order" readonly="True" />
                            <field name="purchase_fiscal_operation_id" readonly="True" />
                        </group>
                    </group>
                    <group attrs="{'invisible': ['|', ('link_or_create_po', '!=', 'link'), ('purchase_id', '=', False)]}">
                        <field name="purchase_order_line" nolabel="1">
                            <tree string="Views">
                                <field name="product_id"/>
                                <field name="date_planned"/>
                                <field name="product_qty"/>
                                <field name="qty_received"/>
                                <field name="qty_invoiced"/>
                                <field name="product_uom"/>
                                <field name="price_unit"/>
                                <field name="price_subtotal" widget="monetary"/>
                            </tree>
                        </field>
                    </group>
                </div>

                <!-- Conciliamento com documento através de PO -->
                <div attrs="{'invisible': ['|', ('origin_model', '!=', 'purchase'), ('linked', '=', True)]}">
                    <group string="Conciliar com Documento Fiscal">
                        <field name="nfe_id" options="{'no_create': True}"/>
                    </group>
                    <separator
                        string="Documento Fiscal"
                    />
                    <group>
                        <group>
                            <field name="nfe_partner_id" readonly="True" />
                            <field name="nfe_document_date" readonly="True" />
                        </group>
                        <group>
                            <field name="nfe_document_type" readonly="True" />
                            <field name="nfe_document_number" readonly="True" />
                            <field name="nfe_document_key" string='Document Key' readonly="True" />
                        </group>
                    </group>
                    <group>
                        <field name="nfe_line_ids" nolabel="1">
                            <tree string="Views">
                                <field name="product_id"/>
                                <field name="uom_id"/>
                                <field name="price_unit"/>
                                <field name="quantity"/>
                                <field name="amount_total"/>
                            </tree>
                        </field>
                    </group>
                </div>

                <footer>
                    <button name="link_nfe_po" type="object" string="Confirmar" class="btn-primary" attrs="{'invisible': [('linked', '=', True)]}"/>
                    <button name="choose_entry_type" type="object" string="Confirmar" class="btn-primary" attrs="{'invisible': [('linked', '=', False)]}"/>
                </footer>
            </form>

        </field>
     </record>

    <record id="act_link_nfe_po" model="ir.actions.act_window">
        <field name="name">Link NFe and PO</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">nfe_import.link_nfe_po</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

</odoo>