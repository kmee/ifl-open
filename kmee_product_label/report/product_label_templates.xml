<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- FEIRA - 4 por página - 120mm x 60mm - multiplicador: 3.3 x 3.6-->
    <template id="label_57x35">
        <table class="table" style="margin: 0; padding: 0;">
            <tr width="453px" style="margin:0;padding:0;">
                <td class="col-xs-4 text-center" style="margin:0;padding:0;">
                    <div style="overflow:hidden; height:100%; border:0; margin:0;">
                         <span style='font-size: 30px; display: block;'>INSTITUTO FEIRA LIVRE</span>    
                         <span t-field="label.product_id.name" style="display: block; font-size: 44px; text-transform: uppercase; font-weight: bold; text-decoration: underline;"/>
                         <div style="width: 100%; overflow: hidden; text-align: center; margin:0;">
                            <div style="font-size: 44px; display: block; text-decoration: underline; text-align: center; margin:0;">
                                <span t-if="label.product_id.currency_id.position == 'before'" t-field="label.product_id.currency_id.symbol"/>
                                <span t-field="label.product_id.lst_price"/>
                                <span t-if="label.product_id.currency_id.position == 'after'" t-field="label.product_id.currency_id.symbol"/>
                                <span style="line-height: 1.2;">
                                    <t t-esc="label.product_id.uom_id.code" />
                                </span>
                            </div>
                        </div>
                        <span style='font-size: 30px; display: block;'>VALOR SEM CONTRIBUIÇÃO</span>
                         <t t-if="label.product_id.product_template_attribute_value_ids">
                            <span t-foreach="label.product_id.product_template_attribute_value_ids" style='display: block; font-size: 30px; text-transform: uppercase' t-as="x">
                            <t t-if="x.attribute_id.name == 'Produtor'">
                                <t t-esc="x.attribute_id.name"/> : <t t-esc="x.name" />
                            </t>
                            </span>
                        </t>
                    </div>
                </td>
            </tr>
        </table>
    </template>

    <template id="report_product_label_57x35_template">
        <t t-set="data_report_landscape" t-value="True"/>
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-set="count" t-value="0" /> 
                <div class="page" style="margin:0; ">
                    <div class="oe_structure" style="margin:0;"/>
                    <t t-foreach="docs" t-as="label">
                        <t t-set="qty" t-value="1" />
                        <t t-if="label.qty">
                            <t t-set="qty" t-value="label.qty" />
                        </t>
                        <t t-foreach="list(range(qty))" t-as="index_qty">
                            <div t-if="count % 4 == 0" style="page-break-after:always;"/>
                            <div t-if="count % 2 == 0" style="clear:both; margin:0"/>
                            <div t-att-style="'width: 650px; float: left; height: 400px; margin:0; border:solid 1px;'">
                                <t t-call="kmee_product_label.label_57x35"/>
                            </div>
                            <t t-set="count" t-value="count+1" />
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <!-- TÉRMICA - 1 por página - 80mm x 30mm - multiplicador: 3.3 x 3.6-->
    <template id="report_product_label_50x38_template">
      <div style="display: flex;height: 128px !important;width: 264px !important;margin: auto;">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="label">
                    <t t-set="qty" t-value="1"/>
                    <t t-if="label.qty" t-set="qty" t-value="label.qty" />
                    <t t-foreach="list(range(qty))" t-as="index_qty">
                        <div class="page" style="page-break-after: always; min-height: 128px !important; margin-top : 0; margin-bottom: 0; ">
                            <div style="height: 100% !important; width: 100% !important; display: flex; margin: auto;">
                                <table class="table" t-att-style="'margin-top: 0; margin-bottom: 0; width: 100%; height: 100%;'">
                                    <tr>
                                        <td style="padding-top: 8%; text-align: center; container: flex; align-items: center; justify-content: center;">
                                            <div style="overflow: hidden; text-transform: uppercase; font-size: 16px; text-align: center;">
                                                <span t-field="label.product_id.name"/>
                                                    <t t-if="label.product_id.product_template_attribute_value_ids">
                                                        <span t-foreach="label.product_id.product_template_attribute_value_ids" t-as="x">
                                                        <t t-if="x.attribute_id.name == 'Produtor'">
                                                            <t/>- <t t-esc="x.name" />
                                                        </t>
                                                        </span>
                                                    </t>
                                            </div>
                                            <div style="width: 100%; overflow: hidden; text-align: center;">
                                                <div style="font-size: 16px; text-align: center;">
                                                    <span t-if="label.product_id.currency_id.position == 'before'" t-field="label.product_id.currency_id.symbol"/>
                                                    <span t-field="label.product_id.lst_price"/>
                                                    <span t-if="label.product_id.currency_id.position == 'after'" t-field="label.product_id.currency_id.symbol"/>
                                                    <span style="line-height: 1.2;">
                                                       <t/>- <t t-esc="label.product_id.uom_id.code" />
                                                    </span>
                                                </div>
                                            </div>
                                            <div style="width: 100%; overflow: hidden; text-align: center;">
                                                <div style="font-size: 16px; text-align: center;">
                                                    <span>VALOR SEM CONTRIBUIÇÃO</span>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </t>
      </div>
    </template>

    <template id="report_product_label_from_template">
        <t t-call="web.basic_layout"/>
    </template>

</odoo>
