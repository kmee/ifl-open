<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--====================== Cart total ======================-->
    <template id="cart_total" inherit_id="website_sale.total">
        <xpath expr="//tr[@id='order_total_untaxed']" position="before">
            <tr class="o_hidden" id="order_total_untaxed_hidden">
                <td class="text-right noborder">Subtotal:</td>
                <td class="text-xl-right noborder">
                    <t t-set="sub_total_hidden" t-value="website_sale_order.get_order_subtotal(website_sale_order.id)"/>
                    <span class="sub_total_hidden" t-esc='"%.2f" % float(sub_total_hidden / 1.35)'/>
                </td>
            </tr>
        </xpath>
        <xpath expr="//tr[@id='order_total_taxes']" position="replace">
            <tr>
                <td class="noborder text-muted"
                    style="padding-top: 0 !important; margin-top: 0 !important; padding-bottom: 0 !important; margin-bottom: 0 !important;"
                    colspan="2">
                    <t t-set="sub_total" t-value="website_sale_order.get_order_subtotal(website_sale_order.id)"/>
                    <p style="font-size: 0.7rem !important;" name="contribution_details"> * Neste valor, estão inclusos
                        o custo dos produtores e a contribuição de <span name="contribution_percent">35</span>% para o Instituto Feira Livre (aproximadamente R$ <span name="contribution_price" t-esc='"%.2f" % float(sub_total / 1.35 * 0.35)'/>).</p>
                </td>
            </tr>
        </xpath>
    </template>
</odoo>
