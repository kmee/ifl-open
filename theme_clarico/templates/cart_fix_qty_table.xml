<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--==================== Cart Lines FIX =====================-->
    <template id="cart_lines_fix_ept" inherit_id="website_sale.cart_lines">
        <xpath expr="//th[hasclass('td-qty')][2]" position="replace"/>
        <xpath expr="//td[hasclass('td-qty')][2]" position="replace"/>
    </template>
    <!--========================== cart summary FIX=======================-->
    <template id="cart_summary_fix_ept" inherit_id="website_sale.cart_summary">
        <xpath expr="//table[@id='cart_products']//th[hasclass('td-qty')][2]" position="replace"/>
        <xpath expr="//table[@id='cart_products']//td[hasclass('td-qty')][2]" position="replace"/>
    </template>
</odoo>
