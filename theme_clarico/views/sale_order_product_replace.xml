<odoo>

    <record id="view_order_form_product_replace_inherit" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="product_replace"/>
            </xpath>

        </field>
    </record>


    <record id="stock_picking_form_view_product_replace_inherit" model="ir.ui.view">
        <field name="name">stock.picking.form.agreement</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='fiscal_operation_id']" position="after">
                <field name="product_replace"/>
            </xpath>
            
        </field>
    </record>

</odoo>
