<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_address_translate" inherit_id="l10n_br_website_sale.portal_address">

        <xpath expr="//label[@for='name']" position="replace">
            <label class="col-form-label" for="name">NOME</label>
        </xpath>

        <xpath expr="//label[@for='phone']" position="replace">
            <label class="col-form-label" for="phone">CELULAR/WHATSAPP</label>
        </xpath>

        <xpath expr="//label[@for='zip']" position="replace">
            <label class="col-form-label" for="zip">
                CEP</label>
        </xpath>

        <xpath expr="//label[@for='street']" position="replace">
            <label class="col-form-label" for="street">
                Rua</label>
        </xpath>

        <xpath expr="//label[@for='country_id']" position="replace">
            <label class="col-form-label" for="country_id">
                País</label>
        </xpath>

        <xpath expr="//label[@for='state_id']" position="replace">
            <label class="col-form-label" for="state_id">Estado</label>
        </xpath>

        <xpath expr="//label[@for='city']" position="replace">
            <label class="col-form-label" for="city">
                Cidade</label>
        </xpath>

<!--        <xpath expr="//span[contains(text(),'Back')]" position="replace">-->
<!--            <span>Voltar</span>-->
<!--        </xpath>-->

<!--        <xpath expr="//span[contains(text(),'Next')]" position="replace">-->
<!--            <span>Avançar</span>-->
<!--        </xpath>-->

        <xpath expr="//a[hasclass('btn-secondary')]/.." position="before">
            <p><b>Atenção:</b> ao confirmar seu cadastro e comprar em nosso
                site, você
                declara estar de acordo com nossos <a target="_blank" href="/blog">termos de uso</a>.</p>
        </xpath>

    </template>
</odoo>
