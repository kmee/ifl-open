<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inhrit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.theme.clarico</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pricelists_setting']" position="inside">
                <div class="o_setting_right_pane">
                    <div class="text-muted">
                        Preço exibido no site</div>
                    <field name="website_pricelist_display"/>
                </div>
                <div class="o_setting_right_pane">
                    <div class="text-muted">
                        Preço cobrado no site</div>
                    <field name="website_pricelist_charge"/>
                </div>

            </xpath>
        </field>
    </record>
</odoo>